doctype html
block vars
html
	head
		//- <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
		title #{title} | Website's title
		meta(http-equiv="Content-Type", content="text/html, charset=utf-8")
		meta(http-equiv="cleartype", content="on")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="title", content="title in SEO")
		meta(name="description", content="Description")
		meta(name="keywords", content="Key words")
		meta(name="HandheldFriendly", content="true")
		link(rel="shortcut icon", href="favicon.ico")
		link(rel="icon", href="favicon.ico")
		link(rel="stylesheet", type="text/css", href="styles/libs.min.css")
		link(rel="stylesheet", type="text/css", href="styles/common.css")
		link(rel="stylesheet", type="text/css", href="styles/" + name + ".css")
	body
		include components/header.pug
		.page-content
			block content



		include components/footer.pug
		script(src="js/libs.min.js")
		script(src="js/common.js")
		script(src="js/" + name + ".js")